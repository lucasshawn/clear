@model ClearWebWs01.ViewModels.AppDataViewModel

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => Model.OwnedDevices.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => Model.OwnedDevices.First().OnPremLocation)
            </th>
            <th>
                @Html.DisplayNameFor(m => Model.OwnedDevices.First().Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OwnedDevices)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.OnPremLocation)
                    </td>
                    <td>
                        @Html.DisplayNameFor(m => item.Status)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    </td>
                </tr>
            }
        </tbody>
</table>